---
import '../styles/main.scss';
import '../styles/fonts.css';
import interFont from '../assets/fonts/inter.woff2';

interface Props {
  title: string;
  description: string;
  bodyId?: string;
  bodyClass?: string;
  noFoucTransition?: boolean;
  viewport?: string;
}

const {
  title,
  description,
  bodyId,
  bodyClass,
  noFoucTransition = false,
  viewport = 'width=device-width, initial-scale=1.0',
} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <title>{title}</title>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="viewport" content={viewport}>
    <meta name="name" content={title}>
    <meta name="description" content={description}>
    <meta name="keywords" content="TheFlyingRat, Joey M, Software Developer, Web Development, Scripting languages, The, Flying, Rat, socials, youtube, snapchat, github">
    <meta name="author" content="Joey Manani">
    <style is:inline>
        body {
            background-color: #121212;
            opacity: 0.001;
            transition: opacity 600ms;
        }
    </style>
    {noFoucTransition && (
        <style is:inline>
            body { transition: none; overflow: hidden; }
        </style>
    )}
    <link rel="preload" href={interFont} as="font" type="font/woff2" crossorigin>
    <style is:inline set:html={`@font-face{font-family:'Inter';font-style:normal;font-weight:400;font-display:swap;src:url('${interFont}') format('woff2');unicode-range:U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+2074,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD}`} />
    <slot name="head" />
</head>
<body id={bodyId} class={bodyClass}>
    <slot />
    <script is:inline defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "b3b04857a4f7456d84c29d92268a8438"}'></script>
</body>
</html>
